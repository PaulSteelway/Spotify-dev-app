extends ../layout

block content
  .container-fluid
    h1.text-center.mb-4 New Account
    form(action='/accounts', method='POST')
      .form-group
        label(for='account') Account
        input.form-control(type='text', name='account', required, placeholder='Enter account')
      .form-group
        label(for='password') Password
        input.form-control(type='password', name='password', required, placeholder='Enter password')
      //- .form-group
      //-   label(for='proxy') Proxy
      //-   input.form-control(type='text', name='proxy', required, placeholder='Enter proxy')
      button.btn.btn-primary(type='submit') Create
