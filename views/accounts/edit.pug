extends ../layout

block content
  .container-fluid
    h1.text-center.mb-4 Edit Account
    form(action=`/accounts/${account.id}?_method=PUT`, method='POST')
      .form-group
        label(for='account') Account
        input.form-control(type='text', name='account', placeholder='Enter account', value=account.account)
      .form-group
        label(for='password') Password
        input.form-control(type='password', name='password', placeholder='Enter password', value=account.password)
      .form-group
        label(for='proxyId') Proxy
      select#proxyId.form-control(name='proxyId')
        each item in proxies
          if item.id === account.proxyId
            option(value=item.id, selected)= item.host
          else
            option(value=item.id)= item.host
      
      button.btn.btn-primary(type='submit') Update
